{
  "name": "designtime-admin-app",
  "version": "0.1.0",
  "repository": "https://github.com/entando/designtime-admin-app",
  "private": true,
  "dependencies": {
    "enzyme-redux": "^0.1.7",
    "frontend-common-components": "github:entando/frontend-common-components#master",
    "node-sass-chokidar": "0.0.3",
    "patternfly": "^3.38.1",
    "patternfly-react": "^1.8.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-intl": "^2.4.0",
    "react-patternfly": "^1.0.0",
    "react-redux": "^5.0.6",
    "react-scripts": "1.0.17",
    "redux": "^3.7.2",
    "redux-mock-store": "^1.4.0",
    "redux-test-utils": "^0.2.2",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1",
    "sass-lint": "^1.12.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "import-plugins": "node ./entando-plugins-config/import-plugins.js",
    "build-css": "node-sass-chokidar src/sass/index.scss -o src/sass/",
    "watch-css": "npm run build-css && node-sass-chokidar src/sass/index.scss -o src/sass/ --watch --recursive",
    "lint": "eslint ./src",
    "coverage": "react-scripts test --env=jsdom --coverage",
    "sass-lint": "sass-lint ./src/sass/**/*.scss ./src/sass/*.scss -v -q",
    "precommit": "npm run lint && npm run sass-lint && npm run coverage",
    "build-full": "npm run precommit && npm run import-plugins && react-scripts build"
  },
  "devDependencies": {
    "chalk": "^2.3.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.5.1",
    "fs-extra": "^3.0.1",
    "husky": "^0.14.3",
    "npm-run": "^4.1.2",
    "react-test-renderer": "^16.2.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}",
      "!src/*.js",
      "!src/test/**",
      "!src/locales/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 20,
        "functions": 20,
        "lines": 20,
        "statements": 20
      }
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
